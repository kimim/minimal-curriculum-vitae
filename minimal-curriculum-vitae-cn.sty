% -------------------------------------------------------------------
% REDEFINE COMMANDS
% -------------------------------------------------------------------

%% Redefine Title
\renewcommand*{\maketitle}{%
  {
    \begin{wrapfigure}{l}{0.79\textwidth}
      \vspace{-60pt}
      \includegraphics[width=0.15\textwidth]{photo.jpg}
    \end{wrapfigure}
    \raggedleft{\Huge \@title}\\[.3in]
    }
}

\newcommand\position{\textcolor{positioncolor}}
\newcommand\company[1]{\hfill\textit{\textbf{\textcolor{companycolor}{#1}}}}
%%\newcommand\company[1]{\textit{\textbf{#1}}}
\newcommand\school[1]{\hfill\textit{\textbf{\textcolor{scoolcolor}{#1}}}}

%% Redefine Section Headings, etc.
\titleformat{\section} %command
            {\Large\scshape\raggedright} %format
            {} %prefix number label
            {0em} %sep
            {} %before
            [\titlerule] %after
\titlespacing{\section}{0pt}{10pt}{5pt}

\titleformat{\subsection} %command
            [leftmargin] %shape
            {\normalsize\raggedleft} %format
            {} %prefix number label
            {0pt} %sep
            {} %before
            [] %after
\titlespacing{\subsection}
            {0.18\textwidth}% max width of the title(for wrap/leftmargin shape)
            {5pt}% vertical space before the title
            {15pt}% separation between title and text
